{
  "name": "moonforge-smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for MoonForge campaign platform on Base network",
  "scripts": {
    "test": "hardhat test",
    "test:simple": "hardhat test tests/Galxe.simple.test.js",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "deploy:token:testnet": "hardhat run scripts/deploy-token.js --network baseSepolia",
    "deploy:galxe:testnet": "hardhat run scripts/deploy-galxe.js --network baseSepolia",
    "deploy:token:mainnet": "hardhat run scripts/deploy-token.js --network baseMainnet",
    "deploy:galxe:mainnet": "hardhat run scripts/deploy-galxe.js --network baseMainnet",
    "test:deployment": "hardhat run scripts/test-deployment.js --network baseSepolia",
    "server": "node server.js",
    "dev": "concurrently \"npm run server\" \"hardhat node\"",
    "verify:testnet": "echo 'Run: npx hardhat verify --network baseSepolia [ADDRESS] [ARGS]'",
    "clean": "hardhat clean && rm -rf cache artifacts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "chai": "^4.3.7",
    "ethers": "^6.7.0",
    "hardhat": "^2.17.0",
    "merkletreejs": "^0.3.10",
    "keccak256": "^1.0.6",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "base",
    "smart-contracts",
    "campaigns",
    "rewards",
    "merkle-tree",
    "hackathon"
  ],
